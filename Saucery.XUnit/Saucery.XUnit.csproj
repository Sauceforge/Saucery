<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <CopyLocalLockFileAssemblies>false</CopyLocalLockFileAssemblies>
    <GenerateRuntimeConfigDevFile>true</GenerateRuntimeConfigDevFile>
  </PropertyGroup>

	<PropertyGroup>
		<IsPackable>true</IsPackable>
		<PackageId>Saucery.XUnit</PackageId>
		<PackageVersion>4.4.1</PackageVersion>
		<Authors>Andrew Gray</Authors>
		<Company>SauceForge</Company>
		<Copyright>Copyright Andrew Gray 2014-2023</Copyright>
		<Description>Sorcery for SauceLabs - Unlocking SauceLabs capability</Description>
		<PackageReleaseNotes>
			ChangeLog:
			v4.0.0
			- Initial Release with dependency on Saucery.Core
		</PackageReleaseNotes>
		<PackageProjectUrl>https://github.com/Sauceforge/Saucery</PackageProjectUrl>
		<PackageIcon>Saucery.XUnit.128x128.png</PackageIcon>
		<PackageTags>xunit saucelabs test testing tdd framework assert</PackageTags>
		<Title>Sorcery for SauceLabs and XUnit</Title>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Meziantou.Xunit.ParallelTestFramework" Version="2.1.0" />
		<PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.8.0" />
		<PackageReference Include="XUnit" Version="2.6.2" />
		<PackageReference Include="xunit.runner.visualstudio" Version="2.5.4">
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
			<PrivateAssets>all</PrivateAssets>
		</PackageReference>
		<!--<PackageReference Include="Saucery.Core" Version="4.3.0" />-->
		<PackageReference Include="XunitContext" Version="3.3.1" />
		<None Include="Images\Saucery.XUnit.128x128.png" Pack="true" PackagePath="\" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Saucery.Core\Saucery.Core.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <None Update="testhost.runtimeconfig.json">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	</ItemGroup>

</Project>
